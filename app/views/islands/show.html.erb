<link rel="stylesheet" href="//brick.a.ssl.fastly.net/Roboto:400"/>
<link href="https://fonts.googleapis.com/css?family=Montaga" rel="stylesheet">
  <div class="container-book">
    <div class="island-image">
      <h1> <%= @island.name %> </h1>
      <h3> Book <%= @island.name %> in <%= @island.location %>  </h3>

      <%= cl_image_tag @island.photo, height: 300, width: 400, crop: :fill %>
    </div>

    <div class="available">
    <%= simple_form_for [@island, @booking] do |f| %>
      <%= f.input :start_date %>
      <%= f.input :ending_date %>
      <%= f.submit "Book", class: "btn btn-outline-primary btn-lg"%>
    <% end %>
