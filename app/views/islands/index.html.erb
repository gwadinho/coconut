<div class="main-container">
  <div class="cards-container">
    <div class="row">
      <% @islands.each do |island| %>
        <div class='col-xs-12 col-md-6'>
          <div class='cardz'>

            <div class="card-content"style="background-image: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.2)), url('<%= cl_image_path island.photo, height: 300, width: 400, crop: :fill %>');">
            <div class="card-category"> <%= island.location %></div>
            <div class="card-description">
              <h2><%= link_to "#{island.name}", island_path(island.id), {:style=>'text-decoration:none; color:white;'} %></h2>
              <p><%= island.price %> $ /day</p>
            </div>
            <img class="card-user" src="<%= image_path 'logo.jpg' %>">
            </div>

            <div class="card-footer">
              <p> <strong>Capacity : <%= island.capacity %> </strong></p>
              <div class="card-controls">
                <a href="#"><i class="fa fa-star" id="stardown"></i></a></li>
                <a href="#"><i class="fa fa-star" id="stardown"></i></a></li>
                <a href="#"><i class="fa fa-star" id="star"></i></a></li>
                <a href="#"><i class="fa fa-star" id="star"></i></a></li>
                <a href="#"><i class="fa fa-star" id="star"></i></a></li>
              </div>
            </div>
          </div>
        </div>
      <% end %>

    </div>
  </div>

  <div
    id="map"
    style="width: 100%;
    height: 600px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>

</div>

