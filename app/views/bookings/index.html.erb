<div class="wrapper">

  <h1>My bookings</h1>

  <div class="container-booking">
    <% @user.bookings.each do |booking| %>
      <li>
        <div class="booking-card">
          <div class="booking-image">
          <%= cl_image_tag booking.island.photo, width: 200, radius: 20 %>
          </div>
          <div class="booking-name">
            <h3><%= booking.island.name %></h3>
            Country: <%= booking.island.location %>
          </div>
          <div class="booking-body">
            <h3>From: <%= booking.start_date %></h3>
            <h3>To: <%= booking.ending_date %></h3>
          </div>
          <div class="booking-body">
            <h3>Bring maximum <%= booking.island.capacity %> people</h3>
          </div>
          <div class="booking-status">
            <h3 class="status accepted">Accepted</h3>
            <h3 class="price"><%= booking.total_price %> â‚¬</h3>
          </div>
        </div>
      </li>
    <% end %>
  </div>
</div>
